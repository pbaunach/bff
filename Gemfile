source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '~> 7.0'

# Use SQLite for development/test (no server required)
gem 'sqlite3', '~> 1.4'
# Use PostgreSQL in production
gem 'pg', '~> 1.5'

# Sprockets is optional in Rails 7; required for the asset pipeline
gem 'sprockets-rails'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 6.0'

# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 5.0'

# Use jQuery
gem 'jquery-rails'

# Build JSON APIs with ease
gem 'jbuilder', '~> 2.11'

# Use Terser for JavaScript compression in production (replaces uglifier)
gem 'terser'

# Web server
gem 'puma', '~> 6.0'

group :development, :test do
  gem 'byebug'
end

group :development do
  gem 'web-console', '~> 4.2'
end

# Windows does not include zoneinfo files
gem 'tzinfo-data', platforms: %i[mingw mswin x64_mingw jruby]

