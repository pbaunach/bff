<h1 class="bff-text-heading--x-large bff-p-top--x-large" id="notifications-anchor">Notifications</h1>

<h2 class="bff-text-heading--default">Notification - Banner</h2>
<div class="example-container">
	<button type="button" class="bff-button bff-button--frederick bff-button-min-size--medium" id="notify-banner-demo-open">Show banner</button>

	<div class="bff-notify__container bff-hide" id="notify-banner-demo">
		<div class="bff-notify">
			<button type="button" class="bff-square-button bff-notify__close" aria-label="Close notification">
				<span class="bff-icon--cross2"></span>
			</button>
			<div class="bff-notify__content">
				<h2 class="bff-text-body--default">Base Banner</h2>
			</div>
		</div>
	</div>
</div>

<script>
(function() {
	var container = document.getElementById('notify-banner-demo');
	var openBtn = document.getElementById('notify-banner-demo-open');
	var closeBtn = container && container.querySelector('.bff-notify__close');
	if (openBtn) openBtn.addEventListener('click', function() { container.classList.remove('bff-hide'); });
	if (closeBtn) closeBtn.addEventListener('click', function() { container.classList.add('bff-hide'); });
})();
</script>

